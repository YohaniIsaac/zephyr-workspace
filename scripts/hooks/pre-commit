#!/bin/bash

# Pre-commit hook that runs only clang-format, checkpatch, and ruff compliance checks
# This hook uses the existing check_compliance.py script with specific modules

# set -e  # Disabled to allow exit code handling

# ANSI color codes for better output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Unicode symbols
CHECK_MARK="✓"
CROSS_MARK="✗"
WARNING="⚠"

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
WORKSPACE_BASE="$(cd "$SCRIPT_DIR/../.." && pwd)"

echo ""

cd "$WORKSPACE_BASE"

# Get staged files (Added, Copied, Modified - exclude deleted files)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR)

if [ -z "$STAGED_FILES" ]; then
    exit 0
fi

# Build path arguments for existing files only
PATH_ARGS=""

for file in $STAGED_FILES; do
    if [ -f "$file" ]; then
        PATH_ARGS="$PATH_ARGS -p \"$file\""
    fi
done

if [ -z "$PATH_ARGS" ]; then
    exit 0
fi

# Run compliance checks on staged files with no XML output and no individual files
# Use raw output from the script
eval "python3 scripts/checks/check_compliance.py \
    -m clangformat -m checkpatch -m ruff \
    -o /dev/null \
    -n $PATH_ARGS"

exit_code=$?

if [ $exit_code -ne 0 ]; then
    echo -e "${RED}❌ FAILED!${NC}"
    exit 1
fi

echo -e "${GREEN}✅ PASSED!${NC}"
